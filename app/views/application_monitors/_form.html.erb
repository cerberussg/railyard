<%= form_with model: @monitor, class: "form-group", local: true do |form| %>
  <div class="row form-row">
    <div class="col-md-5">
      <%= form.label "Application Name" %>
    </div>
    <div class="col-md-7">
      <%= form.text_field :application_name, placeholder: "Application Name",
        size: 45, class: "app-name form-control" %>
    </div>
  </div>
  <div class="row form-row">
    <div class="col-md-5">
      <%= form.label "Web Address" %>
    </div>
    <div class="col-md-7">
      <%= form.text_field :web_address, placeholder: "https://app.address.com", size: 45,
        class: "web-address form-control" %>
    </div>
  </div>
  <div class="row form-row">
    <div class="col-md-5">
      <%= form.label "Satus Frequency" %>
    </div>
    <div class="col-md-3">
      <%= form.select :time_interval, ApplicationMonitor.time_intervals.keys, class: "time-interval form-control" %>
    </div>
  </div>
  <div class="row form-row">
    <div class="col-md-8">
      <%= form.submit "Monitor App", class: "btn btn-brand" %>
    </div>
  </div>
<% end %>
